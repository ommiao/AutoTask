<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/task_list_horizontal_margin"
    android:layout_marginRight="@dimen/task_list_horizontal_margin"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/yhy"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mask_cover"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/task_name_size"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_task_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/task_desc_size"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="end"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="37.5dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp">

            <cn.ommiao.blurview.RoundCornerBlurView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:realtimeOverlayColor="@color/halfWhite"
                app:realtimeBlurRoundCornerRadius="10dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/ic_delete"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="37.5dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp">

            <cn.ommiao.blurview.RoundCornerBlurView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:realtimeOverlayColor="@color/halfWhite"
                app:realtimeBlurRoundCornerRadius="10dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/ic_edit"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp">

            <cn.ommiao.blurview.RoundCornerBlurView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:realtimeOverlayColor="@color/halfWhite"
                app:realtimeBlurRoundCornerRadius="10dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_start"/>

        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>